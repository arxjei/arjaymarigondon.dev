---
interface Props {
	class?: string;
	color?: string;
	margin?: string;
	padding?: string;
	height?: string;
}

const { class: className, color, margin, padding, height } = Astro.props;
---

<style
	define:vars={{
		color: color,
		margin: margin,
		padding: padding,
		height: height,
	}}
>
	div.custom-brutal-card {
		margin: var(--margin, 0);
		padding: var(--padding, 1.5rem);
		height: var(--height, 100%);
		position: relative;
		background-color: var(--color, #ffffff) !default;
		border: 4px solid #000000;
		border-radius: 0.5rem;
		overflow: hidden;
		box-shadow: 8px 8px 0 rgb(0, 0, 0);
		transition: all 0.2s ease-in-out;
	}
	div.custom-brutal-card:hover {
		box-shadow: 4px 4px 0 rgb(0, 0, 0);
		transform: translateX(0.25rem) translateY(0.25rem);
	}
</style>

<div class={`custom-brutal-card ${className || ""}`}>
	<slot />
</div>
