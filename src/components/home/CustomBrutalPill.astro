---
interface Props {
	color?: string;
	class?: string;
	variant?: "default" | "gradient" | "outline";
	size?: "sm" | "md" | "lg";
}

const {
	color = "#ffffff",
	class: className,
	variant = "default",
	size = "md",
} = Astro.props;

const sizeClasses = {
	sm: "px-2 py-1 text-xs",
	md: "px-3 py-1.5 text-sm",
	lg: "px-4 py-2 text-base",
};
---

<style define:vars={{ color: color }}>
	.brutal-pill {
		display: inline-flex;
		align-items: center;
		gap: 0.375rem;
		user-select: none;
		background-color: white;
		border-radius: 9999px;
		border: 3px solid black;
		font-weight: 600;
		cursor: default;
		transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: 4px 4px 0 rgb(0, 0, 0);
		position: relative;
		overflow: hidden;
	}

	.brutal-pill:hover {
		box-shadow: 2px 2px 0 rgb(0, 0, 0);
		transform: translate(2px, 2px);
	}

	/* Default variant */
	.brutal-pill.variant-default:hover {
		background-color: var(--color);
	}

	/* Gradient variant */
	.brutal-pill.variant-gradient {
		background: linear-gradient(135deg, var(--color) 0%, #ffffff 100%);
	}

	.brutal-pill.variant-gradient:hover {
		background: linear-gradient(135deg, var(--color) 0%, var(--color) 100%);
	}

	/* Outline variant */
	.brutal-pill.variant-outline {
		background-color: transparent;
		border-color: var(--color);
		color: var(--color);
	}

	.brutal-pill.variant-outline:hover {
		background-color: var(--color);
		color: white;
	}

	/* Shine effect on hover */
	.brutal-pill::before {
		content: "";
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			90deg,
			transparent,
			rgba(255, 255, 255, 0.4),
			transparent
		);
		transition: left 0.5s;
	}

	.brutal-pill:hover::before {
		left: 100%;
	}

	/* Interactive cursor */
	.brutal-pill.clickable {
		cursor: pointer;
	}

	.brutal-pill.clickable:active {
		box-shadow: 1px 1px 0 rgb(0, 0, 0);
		transform: translate(3px, 3px);
	}
</style>

<span
	class={`brutal-pill variant-${variant} ${sizeClasses[size]} ${className || ""}`}>
	<slot />
</span>
