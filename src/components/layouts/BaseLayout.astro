---
import type { GitHubUser } from "@lib/github";
import BaseNavigation from "@components/layouts/includes/BaseNavigation.astro";
import BaseFooter from "@components/layouts/includes/BaseFooter.astro";
import BaseHead from "@components/layouts/includes/BaseHead.astro";
import "@styles/global.css";
import ParticlesBackground from "@components/layouts/includes/ParticlesBackground.astro";

interface Props {
	title: string;
	description: string;
	classList?: string;
	pageTitle?: string;
	ogImage?: URL;
	userData: GitHubUser;
}

const { title, description, classList, pageTitle, ogImage, userData } =
	Astro.props;
---

<html
	lang="en"
	class="h-full">
	<BaseHead
		ogImage={ogImage}
		title={title}
		description={description}
	/>

	<body class:list={classList}>
		<ParticlesBackground />
		<div
			class="max-w-6xl mx-auto 2xl:border-l-2 w-6xl:border-r-2 w-6xl:border-black">
			<BaseNavigation
				userData={userData}
				pageTitle={pageTitle}
			/>
			<slot />
			<BaseFooter userData={userData} />
		</div>
	</body>
</html>
