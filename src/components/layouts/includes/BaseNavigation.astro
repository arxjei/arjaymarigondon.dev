---
import BrutalNavLogo from "@components/BrutalNavLogo.astro";
import BrutalNavLink from "@components/BrutalNavLink.astro";
import type { GitHubUser } from "@lib/github";
import { FolderCode, Home, Star } from "lucide-astro";

interface Props {
	userData: GitHubUser;
	pageTitle?: string;
}

const navigationItems = [
	{ name: "Home", url: "/", icon: Home },
	{ name: "Projects", url: "/projects/", icon: FolderCode },
	{ name: "Starred", url: "/starred/", icon: Star },
];

const { userData, pageTitle } = Astro.props;
---

<header
	class="border-b-4 border-black flex justify-between items-center px-8 py-6 bg-white sticky top-0 z-50">
	{pageTitle && <h1 class="hidden">{pageTitle}</h1>}

	<BrutalNavLogo username={userData.login} />

	<!-- Desktop Navigation -->
	<nav
		class="hidden md:block"
		aria-label="Main navigation">
		<div class="flex items-center gap-4">
			{
				navigationItems.map((item) => {
					const isActive = Astro.url.pathname === item.url;
					return (
						<BrutalNavLink
							href={item.url}
							isActive={isActive}
							title={`Go to ${item.name}`}>
							{item.name}
						</BrutalNavLink>
					);
				})
			}
		</div>
	</nav>

	<!-- Mobile Navigation -->
	<nav
		class="md:hidden"
		aria-label="Mobile navigation">
		<div class="flex items-center gap-2">
			{
				navigationItems.map((item) => {
					const isActive = Astro.url.pathname === item.url;
					return (
						<BrutalNavLink
							href={item.url}
							isActive={isActive}
							title={`Go to ${item.name}`}>
							<item.icon
								size={18}
								strokeWidth={2.5}
							/>
						</BrutalNavLink>
					);
				})
			}
		</div>
	</nav>
</header>
