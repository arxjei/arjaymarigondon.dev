---
import { getCollection } from "astro:content";
import Layout from "@layouts/Default.astro";
import BlogList from "@components/blog/BlogList.astro";

const posts = await getCollection("blog").then((collection) =>
	collection.reverse()
);
---

<Layout
	title="Blog"
	description="Brutal Blog |Â On this page you can find a collection of blogposts"
	pageTitle="Brutal Blog">
	<main class="bg-blue-400 p-6">
		<div class="flex column justify-between items-start">
			<h2 class="text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif">
				Recent Blog Posts
			</h2>
		</div>
		<BlogList posts={posts} />
	</main>
</Layout>
